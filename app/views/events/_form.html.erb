<div class="form_event">
  <%= form_for @event, url: account_event_path(current_user.account, @event), remote: true do |f| %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.text_field :title, placeholder: 'Event title' %>
    </div>
    <div class="field">
      <%= f.text_field :description, placeholder: 'Event description' %>
    </div>
    <div class="field">
      <%= f.label :project %>
      <%= f.collection_select :project_id, current_user.account.projects, :id, :name, {include_blank: true} %>
    </div>
    <div class="field">
      <%= f.label :starts_at %>
      <%= f.datetime_select :starts_at %>
    </div>
    <div class="field">
      <%= f.label :ends_at %>
      <%= f.datetime_select :ends_at %>
    </div>
    <div class="field">
      <%= f.label :all_day %>
      <%= f.check_box :all_day %>
    </div>
    <div id='edit'>
      <%= f.submit value: ' Save ' %> or <%= link_to 'Cancel', '' %>
    </div>
  <% end %>
</div>
