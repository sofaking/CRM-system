<div id='show_event' class='paper'>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <%= @event.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @event.description %>
  </p>

  <p>
    <strong>Starts at:</strong>
    <%= @event.starts_at %>
  </p>

  <p>
    <strong>Ends at:</strong>
    <%= @event.ends_at %>
  </p>

  <p>
    <strong>All day:</strong>
    <%= @event.all_day %>
  </p>

  <%= link_to 'Edit', account_project_event_path(current_user.account, @event.project, @event) %> |
  <%= link_to 'Back', :back %>
</div>