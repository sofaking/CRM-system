<div class="depot_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend><%= t '.please_log_in' %></legend>
      <div>
        <%= label_tag :email %>
        <%= email_field_tag :email, params[:email] %>
      </div> 
      <div>
        <%= label_tag :password %>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div>
        <%= submit_tag 'login' %> 
      </div>
    </fieldset> 
  <% end %>
</div>
