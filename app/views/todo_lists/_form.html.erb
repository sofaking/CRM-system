<div class="form_todo_list">
  <%= form_for @todo_list, url: account_project_todo_list_path(@todo_list.project.account, @todo_list.project, @todo_list), remote: true do |f| %>
    <% if @todo_list.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@todo_list.errors.count, "error") %> prohibited this todo_list from being saved:</h2>

        <ul>
        <% @todo_list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.text_field :name %>
      <span id='edit'><%= f.submit value: ' Save ' %> or <%= link_to 'Cancel', '' %></span>
      <%= link_to 'Destroy', account_project_todo_list_path(@todo_list.project.account, @todo_list.project, @todo_list), method: :delete, data: { confirm: 'Are you sure?' }, remote: true, id: 'destroy' %>
      <br/>
      <%= f.text_field :description %>
      <span id='edit'><%= f.submit value: ' Save ' %> or <%= link_to 'Cancel', '' %></span>
    </div>
  <% end %>
</div>
<ul class="todos" id=<%= "todo_list_#{@todo_list.id}" %>>
  <li>
    <%= render @todo_list.todos %>
  </li>
</ul>
<%= link_to "add todo", account_project_todo_list_todos_path(todo: {name: 'New todo', todo_list_id: @todo_list.id}, commit: 'Create todo', account_id: @todo_list.project.account.id, project_id: @todo_list.project.id, todo_list_id: @todo_list.id), method: :post, remote: true %>
<br/>