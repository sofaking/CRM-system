<% cache project do %>
  <div class="form_project">
    <%= form_for project, remote: true do |f| %>
      <% if project.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

          <ul>
          <% project.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.text_field :name %>
        <%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, id: 'destroy' %>
        <br/>
        <%= f.text_field :description %><br/>
        <%= f.submit %>
      </div>
    <% end %>
  </div>
  <h1>To-do lists</h1>
  <br/>
  <ul class="projects">
    <% @project = project %>
    <li><%= render @project.todo_lists %></li>
  </ul>
  <%= link_to "add todo list", todo_lists_path(todo_list: {name: 'New todo list'}, commit: 'Create todo list'), method: :post, remote: true %>
<% end %>

