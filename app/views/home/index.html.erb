<!DOCTYPE html>
<html>
  <head>
    <title>Test calendar interface</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body id="<%= controller.controller_name %>">
    <div id="banner">
      <% image_tag("logo.png") %>
      <%= @page_title || t('.title') %>
      <div id="login">
        <% if session[:user_id] %>
          <%= "Hello #{User.find(session[:user_id]).email}" %>
          <%= link_to t('log_out'), logout_url, method: :delete %>
        <% else %>
          <%= link_to t('log_in'), login_path %>
        <% end %>
      </div>
    </div>
    <div id="columns">
      <div id="side">
      </div>
      <div id="main"> 
        <% if notice %>
          <p id="notice"><%= notice %></p>
        <% end %>
        <div id='form_user'>
          <h2>You may create new account</h2>
          <%= render 'users/form' %>
        </div>    
      </div>
      <div id="footer">
        <%= t '.сopyright' %>
      </div>
    </div>
  </body>
</html>
