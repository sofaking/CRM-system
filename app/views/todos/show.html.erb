<div id='todo' class='paper'>
  <div class='path'>
    <%= link_to 'Projects', current_user.account %> >
    <%= link_to @todo.todo_list.project.name, [current_user.account, @todo.todo_list.project] %> >
    <%= link_to @todo.todo_list.name, [current_user.account, @todo.todo_list.project, @todo.todo_list] %> >
    <%= link_to @todo.name, '' %>
  </div>
  <span class='editing_todo_<%= @todo.id %> field'>
      <%= check_box 'todo', 'done', value: not(@todo.done), data: {remote: true, url: account_project_todo_list_todo_path(current_user.account, @todo.todo_list.project, @todo.todo_list, @todo, commit: 'Update todo done'), method: :put} %>
      <%= link_to @todo.name, [current_user.account, @todo.todo_list.project, @todo.todo_list, @todo] %>
      <span class='actions'>
        <%= link_to 'Edit', edit_account_project_todo_list_todo_path(current_user.account, @todo.todo_list.project, @todo.todo_list, @todo), method: :get, remote: true %>
        <%= link_to 'Destroy', [current_user.account, @todo.todo_list.project, @todo.todo_list, @todo], method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
      </span>
    </span>
  </div>
  <div class='comments'>
    comments
  </div>
</div>